{
  "plugins": {
    "tailwindcss": {
      "future": {},
      "content": [
        "./components/**/*.js",
        "./layouts/**/*.js",
        "./pages/**/*.js"
      ],
      "theme": {
        "extend": {
          "screens": {
            "xs": "480px"
          },
          "margin": {
            "n3.5": "-0.875rem"
          },
          "maxWidth": {
            "3/5-screen": "60vw"
          },
          "zIndex": {
            "-1": "-1"
          },
          "colors": {
            "theme": "var(--theme-color)",
            "background-avg": "var(--background-avg-color)"
          }
        }
      },
      "plugins": []
    },
    "autoprefixer": {}
  }
}

